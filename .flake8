[flake8]
max-line-length = 127
max-complexity = 10
select = E9,F63,F7,F82
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .tox,
    .mypy_cache,
    .pytest_cache,
    build,
    dist,
    docs,
    migrations,
    *.egg-info,
    .benchmarks,
    .crush
per-file-ignores =
    tests/*: F401
