  - B307  # eval usage patterns
  - B308  # mark_safe
  - B310  # urllib_urlopen
  - B311  # random
  - B323  # unverified_context
  - B324  # hashlib_insecure_functions
  - B404  # subprocess import - used in controlled CI/testing scripts
  - B602  # subprocess_popen_with_shell_equals_true
  - B603  # subprocess_without_shell_equals_true - used in controlled CI/testing scripts
  - B604  # any_other_function_with_shell_equals_true
