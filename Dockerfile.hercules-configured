FROM mainframed767/hercules:latest

# Copy configuration files
COPY hercules.cnf /etc/hercules/
COPY dasd.img /etc/hercules/

# Create working directory
WORKDIR /etc/hercules

# Expose TN3270 port
EXPOSE 23

# Simple startup script
COPY start-hercules.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/start-hercules.sh

# Default command
CMD ["/usr/local/bin/start-hercules.sh"]